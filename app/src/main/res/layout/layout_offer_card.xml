<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/db_shadow_8p"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBG">
            <ImageView
                android:id="@+id/ivOffer"
                android:layout_toStartOf="@id/llOffers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:padding="@dimen/_11sdp"
                />

            <LinearLayout
                android:id="@+id/llOffers"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvOfferTitle"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRatingBar"
                    android:textSize="@dimen/db_font_size_medium"
                    android:textStyle="bold"
                    tools:text="For a limited time" />
                <TextView
                    android:id="@+id/tvOfferSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/db_font_size_large"
                    android:singleLine="true"
                    android:textColor="@color/colorRatingBar"
                    android:textAppearance="@style/DBFontSemiBold"
                    android:textStyle="bold"
                    tools:text="" />

                <Button
                    android:id="@+id/Iv_button"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/accent"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="0dp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingBottom="0dp"
                    android:text="View"
                    android:textColor="@color/db6_white" />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>